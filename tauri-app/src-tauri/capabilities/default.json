{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-focus",
    "core:window:allow-set-position",
    "core:window:allow-set-size",
    "core:window:allow-start-dragging",
    "core:path:default",
    "core:resources:default",
    "opener:default",
    "store:default",
    "fs:default",
    "process:default",
    "updater:default",
    "dialog:default",
    "log:default",
    "macos-permissions:default",
    "window-state:default",
    "shell:allow-open",
    "screenshots:default",
    {
      "identifier": "fs:scope-appdata",
      "allow": [
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "../../../../api/.venv/bin/python",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "uv",
          "sidecar": true,
          "args": true
        },
        {
          "name": "uvx",
          "sidecar": true,
          "args": true
        },
        {
          "name": "run-applescript",
          "cmd": "osascript",
          "args": true
        },
        {
          "name": "bun",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:60315"
        },
        {
          "url": "https://*.huozhong.in/*"
        },
        {
          "url": "https://github.com/*"
        },
        {
          "url": "https://*.githubusercontent.com/*"
        },
        {
          "url": "https://api.github.com/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$AUDIO/**/*"
        },
        {
          "path": "$CACHE/**/*"
        },
        {
          "path": "$CONFIG/**/*"
        },
        {
          "path": "$DATA/**/*"
        },
        {
          "path": "$LOCALDATA/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$EXE/**/*"
        },
        {
          "path": "$FONT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$PICTURE/**/*"
        },
        {
          "path": "$PUBLIC/**/*"
        },
        {
          "path": "$RUNTIME/**/*"
        },
        {
          "path": "$TEMPLATE/**/*"
        },
        {
          "path": "$VIDEO/**/*"
        },
        {
          "path": "$RESOURCE/**/*"
        },
        {
          "path": "$APP/**/*"
        },
        {
          "path": "$LOG/**/*"
        },
        {
          "path": "$TEMP/**/*"
        },
        {
          "path": "$APPCONFIG/**/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        },
        {
          "path": "$APPCACHE/**/*"
        },
        {
          "path": "$APPLOG/**/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$AUDIO/**/*"
        },
        {
          "path": "$CACHE/**/*"
        },
        {
          "path": "$CONFIG/**/*"
        },
        {
          "path": "$DATA/**/*"
        },
        {
          "path": "$LOCALDATA/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$EXE/**/*"
        },
        {
          "path": "$FONT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$PICTURE/**/*"
        },
        {
          "path": "$PUBLIC/**/*"
        },
        {
          "path": "$RUNTIME/**/*"
        },
        {
          "path": "$TEMPLATE/**/*"
        },
        {
          "path": "$VIDEO/**/*"
        },
        {
          "path": "$RESOURCE/**/*"
        },
        {
          "path": "$APP/**/*"
        },
        {
          "path": "$LOG/**/*"
        },
        {
          "path": "$TEMP/**/*"
        },
        {
          "path": "$APPCONFIG/**/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPLOCALDATA/**/*"
        },
        {
          "path": "$APPCACHE/**/*"
        },
        {
          "path": "$APPLOG/**/*"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    }
  ]
}